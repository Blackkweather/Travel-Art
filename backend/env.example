# Environment variables for Travel Art backend

# Server Configuration
PORT=4000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Database Configuration
# IMPORTANT: Schema is now PostgreSQL - you MUST use PostgreSQL for local development
# Option 1: Use production PostgreSQL (Render) - Get connection string from Render dashboard
# DATABASE_URL="postgresql://user:password@host:5432/dbname?sslmode=require"
# Option 2: Use local PostgreSQL - Install PostgreSQL locally or use Docker
# DATABASE_URL="postgresql://postgres:password@localhost:5432/travelart?schema=public"
# Option 3: Docker PostgreSQL (recommended for local dev):
#   docker run --name travelart-postgres -e POSTGRES_PASSWORD=password -e POSTGRES_DB=travelart -p 5432:5432 -d postgres
#   DATABASE_URL="postgresql://postgres:password@localhost:5432/travelart?schema=public"

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration (for future implementation)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@travelart.com

# Payment Configuration (for future implementation)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

